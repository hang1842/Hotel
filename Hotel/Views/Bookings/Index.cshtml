                @Html.DisplayNameFor(model => model.room_Type3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room_Quantity3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_Type1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_Quantity1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_Type2)
            </td>
