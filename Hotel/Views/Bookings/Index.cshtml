                @Html.DisplayFor(modelItem => item.room_Type3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_Quantity3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarPark)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.bookID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.bookID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.bookID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
