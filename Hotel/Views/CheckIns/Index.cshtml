@model IEnumerable<Hotel.Models.CheckIn>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pre_payment_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pre_payment_method)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.guest.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room.room_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pre_payment_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pre_payment_method)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CheckId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CheckId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CheckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
